# Strava API Configuration
# Get these from your Strava API application: https://www.strava.com/settings/api
STRAVA_CLIENT_ID=your_client_id_here
STRAVA_CLIENT_SECRET=your_client_secret_here

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=strava_db
DB_USER=strava_db_user
DB_PASSWORD=StravaConnect

# File Paths
TOKENS_FILE=data/tokens.json
DATA_DIR=data

# Token Management
TOKEN_REFRESH_BUFFER_MINUTES=10

# Strava API Configuration
STRAVA_ACTIVITIES_PER_PAGE=100
STRAVA_API_BASE_URL=https://www.strava.com/api/v3

# Prefect Configuration (optional)
PREFECT_API_URL=http://localhost:4200/api
PREFECT_UI_URL=http://localhost:4200
